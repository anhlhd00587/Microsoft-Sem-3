<Page
    x:Class="MicrosoftNew.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicrosoftNew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='12' Name="TodayButton" RelativePanel.AlignBottomWithPanel="False"
                 FontFamily="Segoe MDL2 Assets"   
                 FontSize="20"
                 Content="&#xE700;"   
                                             
                    />

            <Button x:ConnectionId='13' Name="EditButton"
                 FontFamily="Segoe MDL2 Assets"   
                 FontSize="20"
                 Content="&#xE70F;"
                 HorizontalAlignment="Left" 
                 Margin="400,0,0,0" 
                 VerticalAlignment="Bottom"  
                                          RenderTransformOrigin="-1.411,0.479" Height="32"
                    />
            <Button x:ConnectionId='14' Name="ThemeButton"
                 FontFamily="Segoe MDL2 Assets"   
                 FontSize="20"
                 Content="&#xEC46;"
                 HorizontalAlignment="Left" 
                 Margin="450,0,0,0" 
                 VerticalAlignment="Bottom"
                                        
                    />
            <Button x:ConnectionId='15' Name="SeeMore"
                 FontFamily="Segoe MDL2 Assets"   
                 FontSize="20"
                 Content="&#xE712;"
                 HorizontalAlignment="Left" 
                 Margin="500,0,0,0" 
                 VerticalAlignment="Bottom"
                                    
                    />

            <Button x:ConnectionId='16' Name="SearchButton"
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily=" Segoe MDL2 Assets"
                    FontSize="20"
                    Content="&#xE1A3;"
                   
                    />
            <TextBox x:ConnectionId='17' Name="SearchTextBox"
                     RelativePanel.LeftOf="SearchButton"
                     Width="200"
                     FontSize="15"
                     PlaceholderText="Search" Margin="0,0,0,30" 
                     />

        </RelativePanel>
        <SplitView x:ConnectionId='1'
            Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="350"
                   CompactPaneLength="40" HorizontalAlignment="Stretch" Margin="0,31,0,0" Grid.RowSpan="2" VerticalAlignment="Stretch">
            <SplitView.Pane>
                <ListBox x:ConnectionId='2' SelectionMode="Single"
                                                               >
                    <ListBoxItem x:ConnectionId='3' Name="Today">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE80F;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                                Today
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='4' Name="Interests">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE728;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                                Interests
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:ConnectionId='5' Name="Sources">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xF585;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                                Sources
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='6' Name="Local">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE707;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                                Local
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='7' Name="Video">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE768;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                              Video
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='8' Name="SendFeedback">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE76E;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                              Send Feed back
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='9' Name="GetMicrosoftNews">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE8EA;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                             Get Microsoft News
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='10' Name="SinIn">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE8FA;"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       >
                              Sin In
                            </TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='11' Name="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE713;" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
                            <TextBlock FontSize="20"
                                       Margin="20,0,0,0"
                                       ><Run Text="Settings"/></TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>


            </SplitView.Pane>

        </SplitView>
    </Grid>
</Page>

